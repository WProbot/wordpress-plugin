{
	"type": "project",
	"require": {
		"squizlabs/php_codesniffer": "^2.8"
	},
	"require-dev": {
		"phpstan/phpstan": "^0.8",
		"wp-coding-standards/wpcs": "^0.13"
	},
	"scripts": {
		"phpcs": "vendor/bin/phpcs --config-set installed_paths ../../../vendor/wp-coding-standards/wpcs; vendor/bin/phpcs --standard=WordPress ./app/",
		"phpcbf": "vendor/bin/phpcbf --config-set installed_paths ../../../vendor/wp-coding-standards/wpcs; vendor/bin/phpcbf --standard=WordPress ./app/",
		"phpstan": "vendor/bin/phpstan analyze -c phpstan.neon --level 5 ./app/"
	}
}
